<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditorActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_add_new_product"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_priem"
            android:text="Добавить элемент"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/btn_add_location"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_editor"
            android:layout_above="@id/btn_info"
            android:text="@string/add_location" />
        <Button
            android:id="@+id/btn_change_location"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="@string/change_location" />
    </LinearLayout>
</RelativeLayout>